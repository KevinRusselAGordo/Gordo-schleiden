import turtle

# Set up the screen
screen = turtle.Screen()
screen.bgcolor("black")  # this shows the color of the backround

# Set up the turtle      # this displays the turtle
t = turtle.Turtle()
t.shape("turtle")        # this guides on what the turtle should look
t.color("red")           # this shows the color feature of the final output
t.speed(3)               # this shows how  fast the turtle should set up the heart

# Function to draw a heart
def draw_heart():
    t.begin_fill()

    t.left(50)       # this guides the angle of where the turtle should run
    t.forward(133)   # this guides the angle of where the turtle should run
    t.circle(50, 200) # this guides the angle of where the turtle should run
    t.right(140) # this guides the angle of where the turtle should run
    t.circle(50, 200) # this guides the angle of where the turtle should run
    t.forward(133) # this guides the angle of where the turtle should run

    t.end_fill()  # this ends how the turtle should  make its direction

# Move turtle to starting position   # this guides where the turtle should start moving
t.penup()
t.goto(0, -200) 
t.pendown()

# Draw the heart  # this function tells the code to run the progress
draw_heart()

# Hide the turtle and display the result # this hides the turtle after making the final output
t.hideturtle()

# Keeps the window open
turtle.done()
